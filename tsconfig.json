{
  "compilerOptions": {
    "strict": true,
    // Path alias config
    "baseUrl": ".",
    "paths": {
      // This needs to be mirrored in babel.config.js
      // Components is a directory with sub directories
      "components/*": ["./components/*"],
      "screens/*": ["./screens/*"],
      "contexts/*": ["./contexts/*"],
    },
  },
  "extends": "expo/tsconfig.base",
}
