{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    // Path alias config
    "baseUrl": ".",
    "paths": {
      // This needs to be mirrored in babel.config.js
      // Components is a directory with sub directories
      "src/*": ["src/*"],
      "@env": ["node_modules/react-native-dotenv"]
    },
  },
  "extends": "expo/tsconfig.base",
  "typeRoots": ["./types"],
}
